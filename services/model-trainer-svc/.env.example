# Environment Configuration
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://trainer:trainer@localhost:5433/model_trainer
TEST_DATABASE_URL=postgresql://trainer:trainer@localhost:5433/test_model_trainer

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORGANIZATION=your_organization_id_here

# Model Registry Integration
MODEL_REGISTRY_URL=http://localhost:8001
MODEL_REGISTRY_API_KEY=your_registry_api_key_here

# Redis (Job Queue)
REDIS_URL=redis://localhost:6379/0

# Service Configuration
API_HOST=0.0.0.0
API_PORT=8003
WORKERS=1

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Training Configuration
DEFAULT_TRAINING_TIMEOUT=3600
MAX_CONCURRENT_JOBS=5
EVALUATION_TIMEOUT=600

# Storage Configuration
DATASET_STORAGE_URL=s3://aivo-training-datasets
MODEL_ARTIFACT_URL=s3://aivo-model-artifacts
TEMP_STORAGE_PATH=/tmp/trainer

# Evaluation Thresholds
DEFAULT_PEDAGOGY_THRESHOLD=0.8
DEFAULT_SAFETY_THRESHOLD=0.9
EVALUATION_RETRY_COUNT=3

# Monitoring
METRICS_PORT=9003
TRACING_ENABLED=true
TRACING_ENDPOINT=http://localhost:4317
