# AIVO Assessment Service - Environment Configuration
# S1-10 Implementation - Development Environment

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/aivo_assessment

# Service Configuration
SERVICE_NAME=assessment-svc
SERVICE_VERSION=1.0.0
PORT=8003
ENVIRONMENT=development

# Event Integration
EVENT_ENDPOINT_URL=http://localhost:8000/api/events
EVENT_TIMEOUT_SECONDS=10

# IRT Engine Configuration
IRT_THETA_MIN=-4.0
IRT_THETA_MAX=4.0
IRT_PRIOR_MEAN=0.0
IRT_PRIOR_STD=1.0
IRT_TERMINATION_SE=0.3
IRT_MAX_QUESTIONS=30
IRT_MIN_QUESTIONS=10

# Level Mapping Thresholds
LEVEL_L0_THRESHOLD=-1.5
LEVEL_L1_THRESHOLD=-0.5
LEVEL_L2_THRESHOLD=0.5
LEVEL_L3_THRESHOLD=1.5

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","https://*.aivo.ai"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET","POST","PUT","DELETE","OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# Session Configuration
SESSION_TIMEOUT_HOURS=2
SESSION_CLEANUP_INTERVAL_HOURS=24

# Performance
UVICORN_WORKERS=1
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Security (for production)
# JWT_SECRET_KEY=your-secret-key
# JWT_ALGORITHM=HS256
# API_KEY_HEADER=X-API-Key
