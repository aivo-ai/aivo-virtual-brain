# Environment Configuration for AIVO Admin Service

# Service Configuration
SERVICE_NAME=admin-svc
VERSION=1.0.0
ENV=development
LOG_LEVEL=INFO

# Security (REQUIRED)
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
JWT_ALGORITHM=HS256
JWT_EXPIRES_HOURS=8

# Database (REQUIRED)
DATABASE_URL=postgresql://postgres:password@localhost:5432/aivo_admin
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379

# External Services
APPROVAL_SERVICE_URL=http://localhost:8010
ORCHESTRATOR_SERVICE_URL=http://localhost:8005
INGEST_SERVICE_URL=http://localhost:8006
LEARNER_SERVICE_URL=http://localhost:8008
USER_SERVICE_URL=http://localhost:8001
AUDIT_SERVICE_URL=http://localhost:8015

# CORS and Security
CORS_ORIGINS=["http://localhost:3000","https://admin.aivo.local"]
ALLOWED_HOSTS=["localhost","admin.aivo.local"]

# Session Management
ADMIN_SESSION_TIMEOUT_MINUTES=30
SUPPORT_SESSION_TIMEOUT_MINUTES=30
MAX_CONCURRENT_ADMIN_SESSIONS=10

# Consent and Data Access
CONSENT_TOKEN_EXPIRES_MINUTES=60
JIT_CONSENT_EXPIRES_MINUTES=15
EMERGENCY_ACCESS_REQUIRES_APPROVAL=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# Monitoring
HEALTH_CHECK_INTERVAL_SECONDS=30
METRICS_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=90

# Job Queue Configuration
JOB_QUEUE_RETRY_ATTEMPTS=3
JOB_QUEUE_TIMEOUT_SECONDS=300

# Feature Flags
ENABLE_EMERGENCY_ACCESS=false
ENABLE_QUEUE_MANAGEMENT=true
ENABLE_LEARNER_INSPECTION=true
ENABLE_AUDIT_EXPORT=true
