{
  "settings": {
    "analysis": {
      "analyzer": {
        "aivo_swahili": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "swahili_stopwords",
            "swahili_synonyms",
            "edge_ngrams"
          ]
        },
        "aivo_swahili_search": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": ["lowercase", "swahili_stopwords", "swahili_synonyms"]
        },
        "aivo_swahili_suggest": {
          "type": "custom",
          "tokenizer": "keyword",
          "filter": ["lowercase", "edge_ngrams"]
        }
      },
      "filter": {
        "swahili_stopwords": {
          "type": "stop",
          "stopwords": [
            "na",
            "ya",
            "wa",
            "za",
            "kwa",
            "katika",
            "hii",
            "hizo",
            "haya",
            "ni",
            "si",
            "bila",
            "pamoja",
            "lakini",
            "au",
            "kama",
            "kwamba",
            "nini",
            "nani",
            "wapi",
            "lini",
            "vipi",
            "gani",
            "je",
            "ndio",
            "la"
          ]
        },
        "swahili_synonyms": {
          "type": "synonym",
          "synonyms_path": "synonyms-sw.txt"
        },
        "edge_ngrams": {
          "type": "edge_ngram",
          "min_gram": 2,
          "max_gram": 20
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "id": {
        "type": "keyword"
      },
      "title": {
        "type": "text",
        "analyzer": "aivo_swahili",
        "search_analyzer": "aivo_swahili_search",
        "fields": {
          "suggest": {
            "type": "completion",
            "analyzer": "aivo_swahili_suggest"
          },
          "keyword": {
            "type": "keyword"
          }
        }
      },
      "description": {
        "type": "text",
        "analyzer": "aivo_swahili",
        "search_analyzer": "aivo_swahili_search"
      },
      "content": {
        "type": "text",
        "analyzer": "aivo_swahili",
        "search_analyzer": "aivo_swahili_search"
      },
      "subject": {
        "type": "keyword",
        "fields": {
          "text": {
            "type": "text",
            "analyzer": "aivo_swahili"
          }
        }
      },
      "grade_band": {
        "type": "keyword"
      },
      "lesson_type": {
        "type": "keyword"
      },
      "tags": {
        "type": "keyword"
      },
      "locale": {
        "type": "keyword"
      },
      "tenant_id": {
        "type": "keyword"
      },
      "difficulty_level": {
        "type": "integer"
      },
      "popularity_score": {
        "type": "float"
      },
      "completion_rate": {
        "type": "float"
      },
      "created_at": {
        "type": "date"
      },
      "updated_at": {
        "type": "date"
      }
    }
  }
}
