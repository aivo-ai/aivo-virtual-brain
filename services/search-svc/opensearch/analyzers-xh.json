{
  "settings": {
    "analysis": {
      "analyzer": {
        "aivo_xhosa": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "xhosa_stopwords",
            "xhosa_synonyms",
            "edge_ngrams"
          ]
        },
        "aivo_xhosa_search": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": ["lowercase", "xhosa_stopwords", "xhosa_synonyms"]
        },
        "aivo_xhosa_suggest": {
          "type": "custom",
          "tokenizer": "keyword",
          "filter": ["lowercase", "edge_ngrams"]
        }
      },
      "filter": {
        "xhosa_stopwords": {
          "type": "stop",
          "stopwords": [
            "ngo",
            "nje",
            "kwa",
            "nga",
            "nge",
            "xa",
            "uba",
            "oko",
            "oku",
            "olo",
            "esi",
            "eli",
            "emi",
            "eyi",
            "obu",
            "olu",
            "ono",
            "aba",
            "ama",
            "imi",
            "izi",
            "ubu",
            "ulu",
            "ukuze",
            "ukuba",
            "kuba"
          ]
        },
        "xhosa_synonyms": {
          "type": "synonym",
          "synonyms_path": "synonyms-xh.txt"
        },
        "edge_ngrams": {
          "type": "edge_ngram",
          "min_gram": 2,
          "max_gram": 20
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "id": {
        "type": "keyword"
      },
      "title": {
        "type": "text",
        "analyzer": "aivo_xhosa",
        "search_analyzer": "aivo_xhosa_search",
        "fields": {
          "suggest": {
            "type": "completion",
            "analyzer": "aivo_xhosa_suggest"
          },
          "keyword": {
            "type": "keyword"
          }
        }
      },
      "description": {
        "type": "text",
        "analyzer": "aivo_xhosa",
        "search_analyzer": "aivo_xhosa_search"
      },
      "content": {
        "type": "text",
        "analyzer": "aivo_xhosa",
        "search_analyzer": "aivo_xhosa_search"
      },
      "subject": {
        "type": "keyword",
        "fields": {
          "text": {
            "type": "text",
            "analyzer": "aivo_xhosa"
          }
        }
      },
      "grade_band": {
        "type": "keyword"
      },
      "lesson_type": {
        "type": "keyword"
      },
      "tags": {
        "type": "keyword"
      },
      "locale": {
        "type": "keyword"
      },
      "tenant_id": {
        "type": "keyword"
      },
      "difficulty_level": {
        "type": "integer"
      },
      "popularity_score": {
        "type": "float"
      },
      "completion_rate": {
        "type": "float"
      },
      "created_at": {
        "type": "date"
      },
      "updated_at": {
        "type": "date"
      }
    }
  }
}
