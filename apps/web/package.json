{
  "name": "@aivo/web",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:a11y": "playwright test --config=playwright-a11y.config.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:perf": "playwright test --config=playwright-perf.config.ts",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc -b --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "validate-routes": "tsx scripts/validate-routes.ts",
    "verify-all": "npm run test:e2e && npm run test:a11y && npm run test:perf && npm run validate-routes"
  },
  "dependencies": {
    "@aivo/i18n": "workspace:*",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@tanstack/react-query": "^5.85.3",
    "clsx": "^2.1.1",
    "dexie": "^4.2.0",
    "framer-motion": "^12.23.12",
    "i18next": "^23.15.0",
    "i18next-browser-languagedetector": "^8.0.0",
    "lucide-react": "^0.540.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-helmet-async": "^2.0.5",
    "react-hook-form": "^7.62.0",
    "react-i18next": "^15.0.2",
    "react-intersection-observer": "^9.16.0",
    "react-router-dom": "^7.0.0",
    "recharts": "^3.1.2",
    "tailwind-merge": "^3.3.1",
    "workbox-background-sync": "^7.3.0",
    "workbox-core": "^7.3.0",
    "workbox-expiration": "^7.3.0",
    "workbox-precaching": "^7.3.0",
    "workbox-routing": "^7.3.0",
    "workbox-strategies": "^7.3.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.0",
    "@pact-foundation/pact": "^15.0.1",
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/jsdom": "^21.1.7",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "2.1.9",
    "autoprefixer": "^10.4.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.12",
    "globals": "^16.3.0",
    "jsdom": "^25.0.1",
    "msw": "^2.10.4",
    "playwright": "^1.47.0",
    "postcss": "^8.4.0",
    "prettier": "^3.3.0",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vite": "^7.0.0",
    "vite-plugin-pwa": "^1.0.2",
    "vitest": "^2.0.0"
  }
}
